<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<AnchorPane prefHeight="600.0"
            prefWidth="800.0"
            style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controller.SessionController"
            stylesheets="@../css/styles.css"
>
    <children>
        <AnchorPane fx:id="panel"
                    layoutX="4.0" layoutY="5.0"
                    prefHeight="591.0" prefWidth="792.0"
                    styleClass="recuadro">

            <BorderPane prefHeight="591.0" prefWidth="792.0">

                <!-- ==== Barra superior ==== -->
                <top>
                    <HBox spacing="10"
                          alignment="CENTER_LEFT"
                          prefHeight="40.0"
                          style="-fx-padding: 8 16 8 16;"
                          BorderPane.alignment="CENTER">


                        <!-- Etiqueta bienvenida -->
                        <Label fx:id="welcomeLabel"
                        text="Bienvenido"
                        styleClass="label"/>

                        <!-- Espaciador flexible -->
                        <Region HBox.hgrow="ALWAYS"/>

                        <!-- Botón cerrar sesión -->
                        <Button fx:id="backButton"
                        text="Cerrar Sesión"
                        styleClass="btn"/>

                        <!-- Botón salir -->
                        <Button fx:id="quitButton"
                                text="✕"
                                id="quitButton"/>
                    </HBox>
                </top>

                <!-- ==== Contenido principal ==== -->
                <center>
                    <StackPane fx:id="contentPane"/>
                </center>

            </BorderPane>
        </AnchorPane>
    </children>
</AnchorPane>
